[Unit]
Description=Telegram Tracking Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/telegram-tracker
Environment="PATH=/root/telegram-tracker/venv/bin"
ExecStart=/root/telegram-tracker/venv/bin/python bot.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
